@{
    ViewData["Title"] = "Task Manager";
}

@model Mission8_Group2.Models.MatrixResponse

<h1>Add/Edit Task</h1>
<br/>

<div>
    <form method="post">
        <!--Add validation messages-->
        <div asp-validation-summary="All"></div>

        <label asp-for="Task">Task: </label>
        <input asp-for="Task" />
        <br />
        <br/>

        <label asp-for="DueDate">Due Date: </label>
        <input asp-for="DueDate" />
        <br />
        <br/>

        <label asp-for="Quadrant">Quadrant: </label>
        <input asp-for="Quadrant" />
        <br />
        <br/>

        <label asp-for="Category">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            <!--Create a for loop to add options based on our Categories list-->
            @foreach (Category x in ViewBag.Categories)
            {
                <option value="@x.CategoryId">@x.CategoryName</option>
            }
        </select>
        <br />
        <br/>

        <label asp-for="Completed">Completed: </label>
        <select asp-for="Completed">
            <option value="true"> Yes </option>
            <option value="false"> No </option>
        </select>
        <br />
        <br />

        <button type="submit"> Add/Edit Task </button>
    </form>
</div>
